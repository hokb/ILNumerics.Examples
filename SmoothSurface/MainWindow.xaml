<Window x:Class="ScatteredDataSurfaceExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms" 
        mc:Ignorable="d"
        Title="ILNumerics Smooth Surface Example" Height="450" Width="800">
    <Grid>
        <WindowsFormsHost Name="WFHost" Margin="0,40,0,0"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Loaded="WFHost_Loaded"/>
        <Slider Name="ResolutionSlider" HorizontalAlignment="Left" Margin="117,10,0,0" VerticalAlignment="Top" Width="120" Minimum="10" Maximum="200" Value="100" ValueChanged="ResolutionSlider_ValueChanged" Panel.ZIndex="100"/>
        <Label x:Name="lblResolution" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="102" RenderTransformOrigin="0.436,0.751" Content="Resolution: 100" Margin="15,5,0,0"/>
        <Slider Name="AvgSlider" HorizontalAlignment="Left" Margin="377,10,0,0" VerticalAlignment="Top" Width="120" Minimum="0" Maximum="20" Value="0" ValueChanged="AvgSlider_ValueChanged" Panel.ZIndex="100"/>
        <Label x:Name="lblAvg" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="102" Content="Smoothness: 0" Margin="285,5,0,0"/>
    </Grid>
</Window>
